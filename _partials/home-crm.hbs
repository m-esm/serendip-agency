<div id="home-crm">

    {{#if data.home.crmKeyPoints.visible}}

    <h1 class="subtitle" data-aos-duration="1000" data-aos="fade-in" data-aos-delay="500">
        {{ data.home.crmKeyPoints.title}}
    </h1>

    <div class="blocks" data-aos-duration="1000" data-aos="fade-in" data-aos-delay="700">
        {{#each data.home.crmKeyPoints.blocks}}

        <div class="block">
            <div class="icon">
                {{> (append 'svg-' icon)}}
            </div>
            <h2 class="subtitle">
                {{unsafe subtitle}}
            </h2>
            <p>
                {{unsafe p}}
            </p>
        </div>

        {{/each}}

    </div>
    {{/if}}

    {{#if data.home.crmKeyPoints.banner.visible}}

    <div class="banner" data-aos-duration="1000" data-aos="fade-in" data-aos-delay="1000">
        {{> (append 'svg-' data.home.crmKeyPoints.banner.number)}}

        <img src="/assets/svg/28.svg" alt="" />

    </div>

    {{/if}}

</div>